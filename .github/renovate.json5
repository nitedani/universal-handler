{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", "schedule:weekly", "group:allNonMajor"],
  "labels": ["dependencies"],
  "rangeStrategy": "bump",
  "assignees": ["@magne4000"],
  "ignoreDeps": [
    // manually bumping
    "node",
    "@types/node",
    "pnpm"
  ],
  "postUpdateOptions": ["pnpmDedupe"],
  "packageRules": [
    {
      "matchPackageNames": ["fastify", "/^@fastify/", "/^fastify-/"],
      "groupName": "fastify"
    }
  ]
}
